<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fragment_my">

    <EditText
        android:id="@+id/edt_leftmenu_myhome_changpasswd_loadpasswd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="9%"
        app:layout_marginLeftPercent="11%"
        android:hint="旧密码"
        android:inputType="number"
        android:gravity="center"
        android:background="@null" />

    <EditText
        android:id="@+id/edt_leftmenu_myhome_changpasswd_newpasswd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="20%"
        app:layout_marginLeftPercent="11%"
        android:hint="新密码"
        android:inputType="number"
        android:gravity="center"
        android:background="@null" />


    <!-- 修改按钮-->
    <Button
        android:id="@+id/btn_leftmenu_myhome_changpasswd_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="31%"
        app:layout_marginLeftPercent="11%"
        android:background="@drawable/button_background"
        android:text="修改"
        android:textColor="#ffffff"
        android:textSize="33px"/>
    <!-- 退出登录按钮-->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="41%"
        app:layout_marginLeftPercent="11%"
        android:background="@drawable/button_background"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:textSize="33px"/>

    <Button
        android:id="@+id/btn_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="51%"
        app:layout_marginLeftPercent="11%"
        android:background="@drawable/button_background"
        android:text="帮助"
        android:textColor="#ffffff"
        android:textSize="33px"/>
    <Button
        android:id="@+id/agent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="60.4%"
        app:layout_marginLeftPercent="11%"
        android:background="@drawable/button_background"
        android:text="我的资料"
        android:textColor="#ffffff"
        android:textSize="33px"/>

</com.zhy.android.percent.support.PercentFrameLayout>