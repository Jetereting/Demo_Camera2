<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="622px"
        android:layout_height="140px"
        app:layout_marginLeftPercent="1%"
        android:background="@null" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22px"
        android:layout_marginRight="7px"
        android:layout_marginTop="22px"
        app:layout_marginLeftPercent="80%"
        android:background="@drawable/btn_login_p"
        android:gravity="center|center_horizontal"
        android:text="查看分享"
        android:textSize="27px" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22px"
        android:layout_marginRight="7px"
        android:layout_marginTop="22px"
        app:layout_marginLeftPercent="55.7%"
        android:background="@drawable/btn_login_p"
        android:gravity="center|center_horizontal"
        android:text="上传户型图"
        android:textSize="27px" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22px"
        android:layout_marginRight="7px"
        android:layout_marginTop="22px"
        app:layout_marginLeftPercent="70.5%"
        android:background="@drawable/btn_login_p"
        android:gravity="center|center_horizontal"
        android:text="户型图定位" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        app:layout_marginTopPercent="12%"
        android:background="@drawable/horization_line" />

</com.zhy.android.percent.support.PercentFrameLayout>