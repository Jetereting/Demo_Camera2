<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:background="@null"
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="1%"/>
    <LinearLayout
        android:layout_width="112dp"
        android:layout_height="70dp"
        app:layout_marginLeftPercent="26%"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:textColor="#02a2e7"
            android:text=""/>
        <TextView
            android:id="@+id/tv_addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLength="10"
            android:text=""/>
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_marginTop="17dp"
        android:layout_width="38dp"
        android:layout_height="33dp"
        android:textSize="12sp"
        app:layout_marginLeftPercent="55.7%"
        android:background="#566068"
        android:text="编辑"
        android:gravity="center|center_horizontal"/>
    <Button
        android:id="@+id/button"
        android:layout_marginTop="17dp"
        android:layout_width="38dp"
        android:layout_height="33dp"
        android:textSize="12sp"
        app:layout_marginLeftPercent="70.7%"
        android:text="查看"
        android:gravity="center|center_horizontal"
        android:background="#adc3c1"/>
    <Button
        android:id="@+id/button2"
        android:layout_marginTop="17dp"
        android:layout_width="38dp"
        android:layout_height="33dp"
        android:textSize="12sp"
        app:layout_marginLeftPercent="85.7%"
        android:text="删除"
        android:gravity="center|center_horizontal"
        android:background="#b9e3d9"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        app:layout_marginTopPercent="12%"
        android:background="@drawable/horization_line" />


</com.zhy.android.percent.support.PercentFrameLayout>